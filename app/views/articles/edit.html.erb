<h1>Editing article</h1>
<%= form_for(@article) do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div class="form-group">
    <%= f.label :content %>
    <%= f.text_area :content %>
  </div>
  <div class="form-group">
    <%= f.submit "Update article", class: "btn-primary" %>
  </div>
<% end %>
<p><%= link_to 'Back to list', articles_path %></p>